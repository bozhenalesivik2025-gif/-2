#include <iostream>
#include <cmath> 
#include <iomanip> 

int main() {

    std::cout << " P = П(i=1..3) П(j=1..4-i) sqrt(|tg(i)|) / (i + j^2)" << std::endl;
    std::cout << "------------------------------------------------------------------" << std::endl;


    double result_while = 1.0;
    int i = 1;
    while (i <= 3) {
        int j = 1;
        while (j <= (4 - i)) {
            result_while *= sqrt(fabs(tan(i))) / (i + j * j);
            j++;
        }
        i++;
    }
    std::cout << "1) while: " << std::fixed << std::setprecision(15) << result_while << std::endl;

    double result_do_while = 1.0;
    i = 1;
    do {
        int j = 1;
        if (j <= (4 - i)) { 
            do {
                result_do_while *= sqrt(fabs(tan(i))) / (i + j * j);
                j++;
            } while (j <= (4 - i));
        }
        i++;
    } while (i <= 3);
    std::cout << "2) do-while:  " << std::fixed << std::setprecision(15) << result_do_while << std::endl;

    double result_for_up = 1.0;
    for (int i_up = 1; i_up <= 3; i_up++) {
        for (int j_up = 1; j_up <= (4 - i_up); j_up++) {
            result_for_up *= sqrt(fabs(tan(i_up))) / (i_up + j_up * j_up);
        }
    }
    std::cout << "3)  for (i++, j++): " << std::fixed << std::setprecision(15) << result_for_up << std::endl;

    double result_for_down = 1.0;
    for (int i_down = 3; i_down >= 1; i_down--) {
        for (int j_down = (4 - i_down); j_down >= 1; j_down--) {
            result_for_down *= sqrt(fabs(tan(i_down))) / (i_down + j_down * j_down);
        }
    }
    std::cout << "4)  for (i--, j--): " << std::fixed << std::setprecision(15) << result_for_down << std::endl;

    return 0;
}
